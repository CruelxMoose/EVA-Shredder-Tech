<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>EVA_Shredder</defName>
		<label>EVA punctured</label>
		<description>The EVA suit’s sealing membrane has been torn open. The chemical treatment on the round prevents the material from repairing itself.</description>
		<hediffClass>EnhancedSpaceFeatures.HediffWithCompsForHumans</hediffClass>
		<defaultLabelColor>(1, 0, 1)</defaultLabelColor>
		<scenarioCanAdd>false</scenarioCanAdd>
		<initialSeverity>0.01</initialSeverity>
		<maxSeverity>1.0</maxSeverity>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-2</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<minSeverity>0.01</minSeverity>
				<label>minor</label>
				<statOffsets>
					<VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">-0.2</VacuumResistance>
					<DecompressionResistance MayRequire="kentington.saveourship2">-0.2</DecompressionResistance>
					<VacuumSpeedMultiplier MayRequire="kentington.saveourship2">-0.4</VacuumSpeedMultiplier>
				</statOffsets>
				<capMods>
					<li>
					<capacity>Moving</capacity>
					<setMax>0.95</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.21</minSeverity>
				<label>moderate</label>
				<statOffsets>
					<VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">-0.4</VacuumResistance>
					<DecompressionResistance MayRequire="kentington.saveourship2">-0.4</DecompressionResistance>
					<VacuumSpeedMultiplier MayRequire="kentington.saveourship2">-0.8</VacuumSpeedMultiplier>
				</statOffsets>
				<capMods>
					<li>
					<capacity>Moving</capacity>
					<setMax>0.90</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.41</minSeverity>
				<label>major</label>
				<statOffsets>
					<VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">-0.6</VacuumResistance>
					<DecompressionResistance MayRequire="kentington.saveourship2">-0.6</DecompressionResistance>
					<VacuumSpeedMultiplier MayRequire="kentington.saveourship2">-1.2</VacuumSpeedMultiplier>
				</statOffsets>
				<capMods>
					<li>
					<capacity>Moving</capacity>
					<setMax>0.85</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.61</minSeverity>
				<label>severe</label>
				<statOffsets>
					<VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">-0.8</VacuumResistance>
					<DecompressionResistance MayRequire="kentington.saveourship2">-0.8</DecompressionResistance>
					<VacuumSpeedMultiplier MayRequire="kentington.saveourship2">-1.6</VacuumSpeedMultiplier>
				</statOffsets>
				<capMods>
					<li>
					<capacity>Moving</capacity>
					<setMax>0.80</setMax>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.81</minSeverity>
				<label>extreme</label>
				<statOffsets>
					<VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">-1</VacuumResistance>
					<DecompressionResistance MayRequire="kentington.saveourship2">-1</DecompressionResistance>
					<VacuumSpeedMultiplier MayRequire="kentington.saveourship2">-2</VacuumSpeedMultiplier>
				</statOffsets>
				<capMods>
					<li>
					<capacity>Moving</capacity>
					<setMax>0.75</setMax>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>
</Defs>